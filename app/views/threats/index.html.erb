<h1>Listing threats</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @threats.each do |threat| %>
      <tr>
        <td><%= threat.title %></td>
        <td><%= threat.category %></td>
        <td><%= threat.description %></td>
        <td><%= link_to 'Show', threat %></td>
        <td><%= link_to 'Edit', edit_threat_path(threat) %></td>
        <td><%= link_to 'Destroy', threat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Threat', new_threat_path %>
