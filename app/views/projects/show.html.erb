<h1> Project</h1>

<h3>Title: <small><%= @project.title %></small> </h3>


<h3>
  Description:
  <small>
  <%= @project.description %>
  </small>
</h3>

<div >
  <%= link_to 'Back', :back, {:class=>"btn btn-default"} %>
  <%= link_to 'Edit', edit_project_path(@project), {:class=>"btn btn-default"} %> 
</div>
</br>
<h3> Requirements</h3>
<%= render @project.requirements %>
<% if @threats.size > 0 %>
  <h3>Add a Security Requirements:</h3>
  <%= form_for([@project, @requirement], :html=>{:class => "form-inline"}) do |f| %>
    <div class="form-group">
      <%= f.label :title, {:class=>"control-label"} %>
      <%= f.select :threat_id, @threats.collect{ |t| [t.title, t.id]}, {},{:class=>"form-control"} %>
      <%= f.submit 'Add requirement', {:class=>"btn btn-default"} %>
    </div>
  <% end %>
<% end%>

